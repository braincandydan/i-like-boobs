---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import MovieCard from '../components/MovieCard.astro';
import { fetchFromTMDB, tmdbEndpoints } from '../lib/tmdb';

// Fetch TV show data
const popularTvData = await fetchFromTMDB(tmdbEndpoints.popularTv);
---

<Layout title="TV Shows - NotFlix">
  <Navbar />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-white mb-12">TV Shows</h1>
    
    <!-- Popular TV Shows -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6">Popular TV Shows</h2>
      <div class="content-grid">
        {popularTvData.results.slice(0, 18).map((show) => (
          <MovieCard movie={show} mediaType="tv" />
        ))}
      </div>
    </section>
  </main>
</Layout>
