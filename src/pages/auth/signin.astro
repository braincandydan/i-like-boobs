---
import Layout from '../../layouts/Layout.astro';
import SignInForm from '../../components/SignInForm';
import { createUrl } from '../../lib/utils';
---

<Layout title="Sign In - NotFlix">
  <div class="min-h-screen flex items-center justify-center bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <a href={createUrl("/")} class="flex justify-center">
          <span class="text-red-600 text-4xl font-bold">NotFlix</span>
        </a>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
          Sign in to your account
        </h2>
        <p class="mt-2 text-center text-sm text-gray-400">
          Or
          <a href={createUrl("/auth/signup")} class="font-medium text-red-600 hover:text-red-500 ml-1">
            create a new account
          </a>
        </p>
      </div>
      
      <SignInForm client:load />
    </div>
  </div>
</Layout>
