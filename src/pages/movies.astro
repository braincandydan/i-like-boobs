---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import MovieCard from '../components/MovieCard.astro';
import { fetchFromTMDB, tmdbEndpoints } from '../lib/tmdb';

// Fetch movie data
const [popularData, topRatedData, upcomingData] = await Promise.all([
  fetchFromTMDB(tmdbEndpoints.popularMovies),
  fetchFromTMDB(tmdbEndpoints.topRatedMovies),
  fetchFromTMDB(tmdbEndpoints.upcomingMovies),
]);
---

<Layout title="Movies - NotFlix">
  <Navbar />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-white mb-12">Movies</h1>
    
    <!-- Popular Movies -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6">Popular Movies</h2>
      <div class="content-grid">
        {popularData.results.slice(0, 18).map((movie) => (
          <MovieCard movie={movie} mediaType="movie" />
        ))}
      </div>
    </section>
    
    <!-- Top Rated Movies -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6">Top Rated Movies</h2>
      <div class="content-grid">
        {topRatedData.results.slice(0, 18).map((movie) => (
          <MovieCard movie={movie} mediaType="movie" />
        ))}
      </div>
    </section>
    
    <!-- Upcoming Movies -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6">Upcoming Movies</h2>
      <div class="content-grid">
        {upcomingData.results.slice(0, 18).map((movie) => (
          <MovieCard movie={movie} mediaType="movie" />
        ))}
      </div>
    </section>
  </main>
</Layout>
