---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "NotFlix - Your favorite movies and TV shows" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="astro-base" content={import.meta.env.BASE_URL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Security headers for popup blocking -->
    <!-- Note: theajack.github.io is required by vidsrc-embed.ru as a nested iframe proxy -->
    <!-- WebRTC and WebSocket connections needed for WebTorrent -->
    <meta http-equiv="Content-Security-Policy" content="frame-ancestors 'self'; frame-src 'self' https://vidsrc-embed.ru https://vidsrc-embed.su https://vsrc.su https://multiembed.mov https://embed.su https://theajack.github.io; object-src 'none'; connect-src 'self' https: wss: ws: blob:; media-src 'self' blob: data:; script-src 'self' 'unsafe-inline' https://esm.sh;" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="Referrer-Policy" content="no-referrer-when-downgrade" />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://api.themoviedb.org">
    <link rel="preconnect" href="https://image.tmdb.org">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
  </head>
  <body class="bg-gray-900 text-white">
    <slot />
    
    <!-- Initialize auth on page load -->
    <script>
      // Auth will be initialized by React components that use the auth store
    </script>
  </body>
</html>
